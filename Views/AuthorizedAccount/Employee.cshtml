
@model List<UserDto>



<div class=" container">
    <form>
        <button class="nav-link text-dark" asp-area="" asp-controller="SendEmail" asp-action="SendEmail">Пригласить на собеседование</button>
    </form>

    <table class="table table-striped" style="position: absolute; top: 125px; left: 0px">
        <thead>
            <tr>
                <th scope="col">Email работника</th>
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Отчество</th>
                <th scope="col">Телефон</th>
                <th scope="col">Профессия</th>
                <th scope="col">История работы</th>
            </tr>
        </thead>

        <tbody>
            @using (@Html.BeginForm("Employee", "AuthorizedAccount"))
            {
            <tr>
                <td><input type="text" name="Email" /> </td>
                <td><input type="text" name="Name" /> </td>
                <td><input type="text" name="SurName" /> </td>
                <td><input type="text" name="MiddleName" /> </td>
                <td><input type="text" name="PhoneNumber" /> </td>
                <td><input type="text" name="Education" /> </td>
                <td><input type="text" name="HistoryOfWork" /> </td>
                <td><input type="submit" value="Найти" /> </td>
                <td></td>
            </tr>
            }
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.MiddleName</td>
                    <td>
                        @if (@user.PhoneNumber == null)
                        {
                            <p>телефон работника отсутствует</p>
                        }
                        else
                        {
                            <p>@user.PhoneNumber</p>
                        }
                    </td>
                    <td>@user.Education</td>
                    <td>@user.HistoryOfWork</td>
                </tr>
            }
        </tbody>
    </table>
</div>